@{
    Layout = "~/Views/Shared/_Mobile.cshtml";
}
@{
    ViewBag.Title = ViewData["title"];
}
<div class="p16-xeet">
    找到@(ViewData["count"].ToString())条授课记录
</div>

<div class="blackrowgall nmt">
    @foreach (var item in ViewData["list"] as List<System.Collections.Hashtable>)
    {
        string date = DateTime.Parse(item["RunDate"].ToString()).ToString("MM月dd日");
        string[] times = item["Time"].ToString().Split(',');

        int[] nTimes = new int[times.Length];

        for (int i = 0; i < times.Length; i++)
        {
            nTimes[i] = Convert.ToInt32(times[i]);
        }

        Array.Sort(nTimes);

        int t1 = nTimes[0];
        int t2 = nTimes[nTimes.Length - 1];

        t1 = t1 - 1;

        string url = "";

        switch (item["State"].ToString())
        {
            case "1":
                {
                    url = "/home/lessonstart/"+ item["TeachID"].ToString();

                    break;
                }
            case "2":
                {
                    url = "/home/lessoning/" + item["TeachID"].ToString();

                    break;
                }
            case "3":
                {
                    url = "#";

                    break;
                }
            case "4":
                {
                    url = "#";

                    break;
                }
        }

        <div class="row actbtn height cd_hottap" hottap="@url">
            <div class="tt"><span>@t1.ToString():00-@t2.ToString():00</span></div>
            <div class="holder arr">
                <i class="icoin fa fa-angle-right"></i>
            </div>
            @switch (item["State"].ToString())
            {
                case "1":
                    {
                        <span class="status-for-order-sm paid">等待上课</span>
                        break;
                    }
                case "2":
                    {
                        <span class="status-for-order-sm">上课中</span>

                        break;
                    }
                case "3":
                    {
                        <span class="status-for-order-sm">待评分</span>

                        break;
                    }
                case "4":
                    {
                        <span class="status-for-order-sm">已完成</span>

                        break;
                    }
            }
           
        </div>
    }
</div>

<div class="clear-15"></div>
<a class="fullbtn normal" href="/home/myindex">返回</a>
