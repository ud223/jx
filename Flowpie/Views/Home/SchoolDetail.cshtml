	    $("#rundate").val(tmp_date);

	    var date = new Date(tmp_date);

	    cur_date = tmp_date;

	    initTraining(date.getDay());
	}

	function initTraining(weeknum) {
	    if (weeknum == 0)
	        weeknum = 7;

	    cur_weeknum = weeknum;

	    $("#time").val('');

	    var data = { 'SchoolID': school_id, 'WeekNum': weeknum };

	    var params = {
	        url: '/api/Training/LoadConfigByWeekNum',
	        data: data,
	        successFun: loadTrainingNode,
	        errorFun: errorInit
	    }

	    ajaxTo(params);
	}

	function loadTrainingNode(data) {
	    ////alert(JSON.stringify(data));
	    if (data.code == '200') {
	        var list = $(".time-tb");
	        var datainfo = eval('(' + data.data + ')');
	        var tmp_times = datainfo.Time
	        var times = tmp_times.split(',');

	        list.html("");

	        $.each(times, function () {
	            var time2 = parseInt(this);
	            var time1 = time2 - 1;

	            var strTime2 = time2.toString() + ":00";

	            if (time2 < 10)
	                strTime2 = "0" + strTime2;

	            var strTime1 = time1 + ":00";

	            if (time1 < 10)
	                strTime1 = "0" + strTime1;


	            var node = $("#time-item").find(".ttd").clone();

	            node.attr('val', this);
	            node.find(".val.time").html(strTime1 + " - " + strTime2);
	            node.find(".val.price").html("C1 ￥" + datainfo.C1 + " C2 ￥" + datainfo.C2);
	            node.find(".val.max").html(datainfo.Num);

	            $(node).click(function () {
	                var $this = $(this).closest('.ttd');

	                if ($this.hasClass('unclickable')) {
	                    $.alertbox({ msg: '抱歉, 该时段已经预约满!' })
	                }
	                else {
	                    if ($this.hasClass('selected')) {
	                        unSelectTime($(this).attr('val'));

	                        $this.removeClass('selected');
	                    }
	                    else {
	                        if (selectTime($(this).attr('val'))) {
	                            $this.addClass('selected');
	                        }
	                    }
	                }
	            });

	            list.append(node);
	        });

	        getUseTeachTime();
	    }
	}

	function errorInit() {

	}

	function getUseTeachTime() {
	    $("#time").val('');

	    var user_id = $.cookie('user_id');

	    var data = { 'SchoolID': school_id, 'RunDate': cur_date, 'StudentID': user_id };

	    var params = {
	        url: '/api/order/LoadOrderByDay',
	        data: data,
            type:'get',
            successFun: loadUseTeachTime,
            errorFun: errorLoadUseTeachTime
	    }

	    ajaxTo(params);
	}

	function loadUseTeachTime(data) {
	    var list = $(".time-tb").find('.ttd');

	    var datainfo = eval('[' + data.data + ']');

	    $.each(list, function () {
	        var item = this;

	        $.each(datainfo, function () {
	            var tmp_time = this.Time.split(',');

	            $.each(tmp_time, function () {
                    if ($(item).attr('val') == this) {
	                    var num_span = $(item).find('.val.num');
	                    var max_span = $(item).find('.val.max');

	                    var num = parseInt(num_span.html());
	                    var max = parseInt(max_span.html());

	                    num = num + 1;

	                    $(num_span).html(num);

	                    if (num == max) {
	                        $(item).addClass('unclickable');
	                    }
	                }
	            });
	        });
	    });
	}

	function errorLoadUseTeachTime() {

	}

	function selectTime(time, node) {
	    var select_time = $("#time").val();

	    if (!select_time) {
	        $("#time").val(time);

	        return true;
	    }
	    else {
	        var arr_time = select_time.split(',');

	        var tmp_time_head = parseInt(arr_time[0]);
	        var tmp_time_tail = parseInt(arr_time[arr_time.length - 1]);

	        if (tmp_time_head + 1 == time || tmp_time_head - 1 == time || tmp_time_tail + 1 == time || tmp_time_tail - 1 == time) {
	            select_time = select_time + ',' + time;

	            $("#time").val(select_time);

	            return true;
	        }
	        else {
	            $(".ttd").removeClass('selected');

	            $("#time").val(time);

	            return true;
	        }
	    }
	}

	function unSelectTime(time) {
	    var select_time = $("#time").val();

	    if (select_time == time) {
	        $("#time").val('');
	    }
	    else {
	        select_time = select_time.replace(',' + time, '');
	        select_time = select_time.replace(time + ',', '');

	        $("#time").val();
	    }
	}

	function submit() {
	    var select_time = $("#time").val();

	    if (!select_time) {
	        $.alertbox({ msg: '请先约练课程时段!' });

