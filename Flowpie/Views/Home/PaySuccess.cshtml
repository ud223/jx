        {
            string time = (((System.Collections.Hashtable)ViewData["item"])["Time"]).ToString();

            string[] str_time = time.Split(',');

            Array.Sort(str_time);

            foreach (string t in str_time)
            {
                int tmp = Convert.ToInt32(t);
                int tmp1 = tmp - 1;

                <div>@tmp1.ToString():00 - @tmp.ToString():00</div>

            }
}
