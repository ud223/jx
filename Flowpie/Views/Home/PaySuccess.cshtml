<script type="text/javascript">
    var orderid = '@ViewData["orderid"]';

    $('document').ready(function (e) {
        orderSuccess();
    });

    function orderSuccess() {
        var data = { 'orderid': orderid };
        //alert(JSON.stringify(data));
        var params = {
            url: '/api/order/orderNext',
            data: data,
            successFun: success,
            errorFun: error
        }

        ajaxTo(params);
    }

    function success(date) {
        var opertion = {
            msg: date.message,
            exitText: "关闭!"
        };

        $.alertbox(opertion);
    }

    function error() {
        var opertion = {
            msg: date.message,
            exitText: "关闭!"
        };

        $.alertbox(opertion);
    }
</script>