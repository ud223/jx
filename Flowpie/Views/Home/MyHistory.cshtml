@{
    Layout = "~/Views/Shared/_Mobile.cshtml";
}
@{
    ViewBag.Title = ViewData["title"];

    var list = ViewData["list"] as List<System.Collections.Hashtable>;
}
<div class="p16-xeet">
    找到<span>@list.Count</span>条记录
</div>

<div class="blackrowgall unclickable nmt">
    <div class="row">
        <div class="timeline-blks">
            @foreach (var item in list)
            {
                if (item["State"].ToString() == "0")
                {
                    continue;
                }

                string date = DateTime.Parse(item["RunDate"].ToString()).ToString("MM月dd日");
                string[] times = item["Time"].ToString().Split(',');

                int[] nTimes = new int[times.Length];

                for (int i = 0; i < times.Length; i++)
                {
                    nTimes[i] = Convert.ToInt32(times[i]);
                }

                Array.Sort(nTimes);

                int t1 = nTimes[0];
                int t2 = nTimes[nTimes.Length - 1];

                t1 = t1 - 1;

                string lessonTypeText = "科目二";

                if (item["LessonType"].ToString() == "3")
                {
                    lessonTypeText = "科目三";
                }

                if (item["State"].ToString() == "1" && item["CoachID"].ToString() == "null")
                {
                    <div class="itmc waiting">
                        <div class="circl"></div>
                        <div class="rtbcd">
                            <div class="triangle-topright"></div>
                            <div class="ct">
                                <div class="t1">@date @t1.ToString():00-@t2.ToString():00</div>
                                <div class="t2">我们正在为您分配教练 ...</div>

                            </div>
                            <div class="lab">预约中</div>
                        </div>
                    </div>
                }
                else if (item["State"].ToString() == "1" && item["CoachID"].ToString() != "null")
                {
                    <div class="itmc bookinged">
                        <div class="circl"></div>
                        <div class="rtbcd">
                            <div class="triangle-topright"></div>
                            <div class="ct">
                                <div class="t1">@date @t1.ToString():00-@t2.ToString():00</div>
                                <div class="tb">
                                    <div class="tr">
                                        <div class="td col1">教练：</div>
                                        <div class="td">@item["name"]</div>
                                    </div>
                                </div>
                            </div>
                            <div class="lab">已预约</div>
                        </div>
                    </div>
                }
                else if (item["State"].ToString() == "2")
