    @if (CommonLib.Common.ConfigReader.Read("CurrentEnv") == "prod")
    {
        string cdnDomain = CommonLib.Common.ConfigReader.Read("CdnDomain");
        // 生产环境，出现cdn域名
        string stylesUrl = cdnDomain + Styles.Url("~/statics/admin/css/all");
        string scriptsUrl = cdnDomain + Scripts.Url("~/statics/admin/js/all");

        <link href="@stylesUrl" type="text/css" rel="stylesheet" />
        <script type="text/javascript" src="@scriptsUrl"></script>

    }
    else
