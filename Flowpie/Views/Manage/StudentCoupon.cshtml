@{
    Layout = "~/Views/Shared/_Manage.cshtml";
}
@{
    ViewBag.Title = @ViewData["title"].ToString();
}
<form action="/manage/coupon/save" method="post">
    <div class="main-body-relative relative">
        <div class="cko-wp">
            <!-- Nav tabs -->
            <ul class="nav nav-tabs mytabs" role="tablist">
                <li role="presentation" class="active"><a href="#ts-info" aria-controls="ts-info" role="tab" data-toggle="tab">发放优惠卷</a></li>
            </ul>
            <!-- Tab panes -->
            <div class="tab-content tab-kiki-ct">
                <div role="tabpanel" class="tab-pane fade in active" id="ts-info">
                    <div class="opl-table">
                        <div class="tt">
                            <span>@ViewData["title"].ToString()</span>
                            <button class="downbtn-normal down"></button>
                        </div>
                        <div class="ct clearfix">
                            <div class="inner-table">
                                <div class="row">
                                    <div class="cell col1">学员名称</div>
                                    <div class="cell col2">
                                        <input type="text" id="Name" name="Name" value="@if (ViewData["item"] != null) {
                                            var item = ViewData["item"] as System.Collections.Hashtable;

                                            @item["Name"].ToString();
                                        }" maxlength="25" style="width:100%" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="cell col1">优惠卷名目</div>
                                    <div class="cell col2">
                                        <input type="text" id="CouponText" name="CouponText" value="" maxlength="25" style="width:100%" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="cell col1">优惠卷金额</div>
                                    <div class="cell col2">
                                        <input type="number" id="Amount" name="Amount" value="" maxlength="200" style="width:100%" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="bt-btn-bar">
                        <input type="hidden" id="StudentID" name="StudentID" value="@if (ViewData["item"] != null) {
                                            var item = ViewData["item"] as System.Collections.Hashtable;

                                            @item["StudentID"].ToString();
                                        }">
                        <button type="submit" class="btn btn-success glyphicons glyphicons-disk-saved" style="height:40px">发放优惠卷</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
