@{
    Layout = "~/Views/Shared/_Manage.cshtml";
}
@{
    ViewBag.Title = "教练利用率";
}

<div class="main-body-relative relative">
    <div class="fix-wxp-toolbar unfix">
        <div class="fix-wxp-toolbar-wp">
            <div class="fix-wxp-toolbar-txt">
                <a href="/manage/coachlist" class="breadcrumb-prev">教练列表</a> 
                <span class="breadcrumb-prev">/</span>
                <a href="/manage/coachdetail" class="breadcrumb-prev">王莹曦</a>
                <span class="breadcrumb-prev">/</span>
                <span class="breadcrumb-t1">教练利用率</span>
            </div>
        </div>
    </div>


    <div class="cko-wp">

        <div class="clear-20"></div>

        <!-- Tab panes -->
        <div class="tab-content tab-kiki-ct">
            <div role="tabpanel" class="tab-pane fade in active" id="ts-info">
                <div class="opl-table">
                    <div class="tt">
                        <span>王莹曦 的利用状况</span>
                        @*<button class="btn btn-primary cornerbtn btn-sm" data-toggle="modal" data-target="#myModal">编辑基本信息</button>
                        <button class="btn btn-success cornerbtn btn-sm">利用状况</button>*@
                    </div>
                    <div class="ct clearfix">
                        <div class="inner-table">
                            <div class="row">
                                <div class="cell col1">查询日期</div>
                                <div class="cell col2">
                                    <div class="input-group">
                                        <input type="text" class="form-control" id="datepicker01">
                                        <span class="input-group-btn">
                                            <button class="btn btn-success" placeholder="1980/01/01" type="button">查询</button>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="yuwmei">
                        <div class="ieot">
                            <button class="btn btn-default btn-sm" onclick="$('.hourstandtb td').each(function () { $(this).addClass('selected'); });">全部选中</button>
                            <button class="btn btn-default btn-sm" onclick="$('.hourstandtb td').each(function () { $(this).toggleClass('selected'); });">反选</button>
                            <button class="btn btn-default btn-sm">还原</button>
                        </div>
                        <table class="standtb hourstandtb">
                            <tr>
                                <td>00:00 - 01:00</td>
                                <td>01:00 - 02:00</td>
                                <td>02:00 - 03:00</td>
                                <td>03:00 - 04:00</td>
                                <td>04:00 - 05:00</td>
                                <td>05:00 - 06:00</td>
                                <td>06:00 - 07:00</td>
                                <td>07:00 - 08:00</td>
                                <td>08:00 - 09:00</td>
                                <td>09:00 - 10:00</td>
                            </tr>
                            <tr>
                                <td>10:00 - 11:00</td>
                                <td>11:00 - 12:00</td>
                                <td>12:00 - 13:00</td>
                                <td>13:00 - 14:00</td>
                                <td>14:00 - 15:00</td>
                                <td>15:00 - 16:00</td>
                                <td>16:00 - 17:00</td>
                                <td>17:00 - 18:00</td>
                                <td>18:00 - 19:00</td>
                                <td>19:00 - 20:00</td>
                            </tr>
                            <tr>
                                <td>20:00 - 21:00</td>
                                <td>21:00 - 22:00</td>
                                <td>22:00 - 23:00</td>
                                <td>23:00 - 24:00</td>
                            </tr>
                        </table>

                        <div class="btbar">
                            <button class="btn btn-primary"><span class="halflings halflings-ok"></span> 保存</button>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<!-- /container -->
<script type="text/javascript">
	$(document).ready(function() {
	    $('#datepicker01').datetimepicker({
	        minView: 2,
	        startView: 2,
	        weekStart: 1,
	        format: 'yyyy/mm/dd',
	        autoclose: true
	    });

	    $('.hourstandtb td').click(function () {
	        var $this = $(this);
	        $this.toggleClass('selected');
	    });
	});

	
</script>